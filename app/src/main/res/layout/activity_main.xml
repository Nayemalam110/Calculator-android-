<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/inputId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="right"
        android:padding="10dp"
        android:textSize="20dp"
        tools:text="Number" />

    <TextView
        android:id="@+id/outputId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="right"
        android:padding="10dp"

        android:textSize="20dp"
        tools:text="Result" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout style="@style/btnRow">

        <Button
            style="@style/btnNumber"
            android:onClick="allClearAction"
            android:text="AC" />

        <Button
            style="@style/btnNumber"
            android:onClick="clearAction"
            android:text="C" />

        <Space

            style="@style/btnNumber" />


        <Button
            style="@style/btnOperation"
            android:onClick="numberOperation"
            android:text="/"

            />
    </LinearLayout>

    <LinearLayout style="@style/btnRow">

        <Button
            style="@style/btnNumber"

            android:text="7" />


        <Button
            style="@style/btnNumber"
            android:text="8"

            ></Button>

        <Button
            style="@style/btnNumber"
            android:text="9"

            ></Button>

        <Button
            style="@style/btnOperation"
            android:text="X"

            ></Button>
    </LinearLayout>

    <LinearLayout style="@style/btnRow">

        <Button
            style="@style/btnNumber"
            android:text="4" />


        <Button
            style="@style/btnNumber"
            android:text="5"

            ></Button>

        <Button
            style="@style/btnNumber"
            android:text="6"

            ></Button>

        <Button
            style="@style/btnOperation"
            android:text="-" />
    </LinearLayout>

    <LinearLayout style="@style/btnRow">

        <Button
            style="@style/btnNumber"
            android:text="1">

        </Button>

        <Button
            style="@style/btnNumber"
            android:text="2"

            ></Button>

        <Button
            style="@style/btnNumber"
            android:text="3"

            ></Button>

        <Button
            style="@style/btnOperation"
            android:text="+" />
    </LinearLayout>

    <LinearLayout style="@style/btnRow">

        <Button
            style="@style/btnNumber"
            android:text=".">

        </Button>

        <Button
            style="@style/btnNumber"
            android:text="0"

            />


        <Button
            style="@style/btnNumber"
            android:layout_weight="2"
            android:background="@color/orange"
            android:onClick="equalAction"
            android:text="=" />
    </LinearLayout>


</LinearLayout>